source "{{ scripts_dir }}"/dbstart_func.sh
rc=0

while IFS=':' read -r ORACLE_SID ORACLE_HOME AUTOSTART_FLAG; do
    if [[ "$AUTOSTART_FLAG" =~ [Yy] ]]; then
        PATH_SAVE="$PATH"
        LD_LIBRARY_PATH_SAVE="$LD_LIBRARY_PATH"
        export ORACLE_SID ORACLE_HOME
        export PATH="$ORACLE_HOME/bin:$PATH"
        export LD_LIBRARY_PATH="$ORACLE_HOME/lib:$LD_LIBRARY_PATH"

        if ! stop_listener "{{ listener_name }}"; then
            rc=1
        fi

        if pgrep -f "[ora|db]_smon_$ORACLE_SID" ; then
            if ! shutdown_db; then
                rc="$?"
            fi
        fi
        PATH="$PATH_SAVE"
        LD_LIBRARY_PATH="$LD_LIBRARY_PATH_SAVE"
        export PATH LD_LIBRARY_PATH
    fi
done < <(sed 's/#.*//; /^[[:space:]]*$/d' /etc/oratab)

exit "$rc"
